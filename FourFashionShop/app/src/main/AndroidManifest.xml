<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.FourFashionShop">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight">

        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/AppTheme.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.UserInfoActivity" />
        <activity android:name=".ui.LocationUserActivity" />
        <activity android:name=".ui.BeforeOrderActivity" />
        <activity android:name=".ui.OrderInfoActivity" />
        <activity android:name=".ui.OrdersManagementActivity" />
        <activity android:name=".ui.FavoriteProductActivity" />
        <activity android:name=".ui.ProductsPurchasedActivity" />
        <activity android:name=".ui.Mall_Product_Activity" />
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/BottomNavigation" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".ui.RegisterActivity"
            android:theme="@style/AppTheme.FullScreen" />
    </application>

</manifest>