<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:background="@drawable/background_btn"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/customerImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man1" />

    <TextView
        android:id="@+id/card_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Khách hàng: "
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toEndOf="@+id/customerImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meo meo"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="@+id/card_item_name"
        app:layout_constraintStart_toEndOf="@+id/card_item_name"
        app:layout_constraintTop_toTopOf="@+id/card_item_name" />


    <TextView
        android:id="@+id/tv_product_rating_miniview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/_2sdp"
        android:text="Email: "
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/customerImage"
        app:layout_constraintTop_toBottomOf="@+id/card_item_name" />

    <TextView
        android:id="@+id/customerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="123456"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_rating_miniview"
        app:layout_constraintStart_toEndOf="@+id/tv_product_rating_miniview"
        app:layout_constraintTop_toTopOf="@+id/tv_product_rating_miniview" />


    <TextView
        android:id="@+id/customerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_4sdp"
        android:gravity="center"
        android:text="meo, meo, meo, meo"
        app:layout_constraintBottom_toBottomOf="@+id/product_price"
        app:layout_constraintStart_toEndOf="@+id/product_price"
        app:layout_constraintTop_toTopOf="@+id/product_price" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Địa chỉ:"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/customerImage"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_rating_miniview" />


</androidx.constraintlayout.widget.ConstraintLayout>