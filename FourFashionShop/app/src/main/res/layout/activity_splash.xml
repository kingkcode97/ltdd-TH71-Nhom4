<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity"
    android:background="#F1F3FFFF">

    <com.agrawalsuneet.dotsloader.loaders.CircularDotsLoader
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/framelogoImageView"
        app:loader_animDur="60"
        app:loader_bigCircleRadius="28dp"
        app:loader_circleRadius="8dp"
        app:loader_defaultColor="@color/pink_A400"
        app:loader_firstShadowColor="@color/pink_A100"
        app:loader_secondShadowColor="@color/pink_400"
        app:loader_selectedColor="@color/pink_900"
        app:loader_showRunningShadow="true" />

    <ImageView
        android:id="@+id/framelogoImageView"
        android:layout_width="357dp"
        android:layout_height="402dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.366"
        app:srcCompat="@drawable/framelogo" />

</androidx.constraintlayout.widget.ConstraintLayout>