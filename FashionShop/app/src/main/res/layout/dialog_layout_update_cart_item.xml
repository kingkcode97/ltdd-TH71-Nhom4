<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/update_cart_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Update Cart Item !!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/variant_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Size"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toLeftOf="@+id/update_cart_item_title"
        app:layout_constraintStart_toStartOf="@+id/update_cart_item_title"
        app:layout_constraintTop_toBottomOf="@+id/update_cart_item_title" />

    <TextView
        android:id="@+id/quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Quantity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toLeftOf="@+id/variant_label"
        app:layout_constraintStart_toStartOf="@+id/variant_label"
        app:layout_constraintTop_toBottomOf="@+id/variant_available_tv" />

    <Spinner
        android:id="@+id/cart_update_dialog_variant_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="@+id/cart_update_dialog_cancel_button"
        app:layout_constraintLeft_toRightOf="@+id/cart_update_dialog_update_button"
        app:layout_constraintRight_toRightOf="@+id/cart_update_dialog_cancel_button"
        app:layout_constraintTop_toTopOf="@+id/variant_label" />

    <Spinner
        android:id="@+id/cart_update_dialog_quantity_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="@+id/cart_update_dialog_variant_spinner"
        app:layout_constraintLeft_toLeftOf="@+id/cart_update_dialog_variant_spinner"
        app:layout_constraintRight_toRightOf="@+id/cart_update_dialog_variant_spinner"
        app:layout_constraintStart_toStartOf="@+id/cart_update_dialog_variant_spinner"
        app:layout_constraintTop_toTopOf="@+id/quantity_label" />

    <Button
        android:id="@+id/cart_update_dialog_update_button"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="#e5ffe5"
        android:text="Update"
        app:layout_constraintLeft_toRightOf="@+id/quantity_label"
        app:layout_constraintStart_toEndOf="@+id/quantity_label"
        app:layout_constraintTop_toBottomOf="@+id/cart_update_dialog_quantity_spinner" />

    <Button
        android:id="@+id/cart_update_dialog_cancel_button"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/windowBackground"
        android:text="Cancel"
        app:layout_constraintLeft_toRightOf="@+id/cart_update_dialog_update_button"
        app:layout_constraintStart_toEndOf="@+id/cart_update_dialog_update_button"
        app:layout_constraintTop_toBottomOf="@+id/cart_update_dialog_quantity_spinner" />

    <TextView
        android:id="@+id/update_cart_dialog_product_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="product_name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toLeftOf="@+id/update_cart_item_title"
        app:layout_constraintStart_toStartOf="@+id/update_cart_item_title"
        app:layout_constraintTop_toBottomOf="@+id/update_cart_item_title" />

    <TextView
        android:id="@+id/variant_available_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="available"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/variant_label"
        app:layout_constraintStart_toStartOf="@+id/variant_label"
        app:layout_constraintTop_toBottomOf="@+id/variant_label" />
</androidx.constraintlayout.widget.ConstraintLayout>
